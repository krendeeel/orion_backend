generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FieldType {
  NUMBER
  SINGLE_LINE_TEXT
  LONG_TEXT
  SINGLE_SELECT
  MULTI_SELECT
  CHECKBOX
  SINGLE_USER
  MULTI_USER
  SINGLE_LINK
  MULTI_LINK
  NAME
  AUTHOR
  CREATED_BY
  CREATED_AT
}

enum FileType {
  IMAGE
  PDF
  DOCUMENT
  OTHER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bases               Base[]
  valuesCreated       Value[]              @relation("ValueCreatedBy")
  valuesUpdated       Value[]              @relation("ValueUpdatedBy")
  meetings            Meeting[]
  meetingParticipants MeetingParticipant[]
  files               File[]               @relation("FileOwner")
  folders             Folder[]             @relation("FolderOwner")
  filePermissions     FilePermission[]     @relation("FilePermissionUser")
  folderPermissions   FolderPermission[]   @relation("FolderPermissionUser")
  filesCreated        File[]               @relation("FileCreatedBy")
  filesUpdated        File[]               @relation("FileUpdatedBy")
  foldersCreated      Folder[]             @relation("FolderCreatedBy")
  foldersUpdated      Folder[]             @relation("FolderUpdatedBy")
}

model Base {
  id        String   @id @default(uuid())
  name      String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User     @relation(fields: [createdBy], references: [id])
  fields  Field[]
  records Record[]
}

model Field {
  id        String    @id @default(uuid())
  baseId    String
  name      String
  type      FieldType
  config    Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  base    Base     @relation(fields: [baseId], references: [id], onDelete: Cascade)
  options Option[]
  values  Value[]
}

model Option {
  id        String   @id @default(uuid())
  fieldId   String
  name      String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  field Field @relation(fields: [fieldId], references: [id], onDelete: Cascade)
}

model Record {
  id        String   @id @default(uuid())
  baseId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  base   Base    @relation(fields: [baseId], references: [id], onDelete: Cascade)
  values Value[]
}

model Value {
  id        String   @id @default(uuid())
  recordId  String
  fieldId   String
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
  updatedBy String?

  record      Record @relation(fields: [recordId], references: [id], onDelete: Cascade)
  field       Field  @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  userCreated User?  @relation("ValueCreatedBy", fields: [createdBy], references: [id])
  userUpdated User?  @relation("ValueUpdatedBy", fields: [updatedBy], references: [id])

  @@unique([recordId, fieldId])
}

model Meeting {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  participants MeetingParticipant[]
  user         User                 @relation(fields: [createdBy], references: [id])
}

model MeetingParticipant {
  id        String    @id @default(uuid())
  meetingId String
  userId    String
  joinedAt  DateTime?
  leftAt    DateTime?

  meeting Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([meetingId, userId])
}

model File {
  id        String   @id @default(uuid())
  name      String
  format    FileType
  path      String
  folderId  String?  @map("folder_id")
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String
  updatedBy String
  size      Int

  owner       User             @relation("FileOwner", fields: [ownerId], references: [id])
  folder      Folder?          @relation("FileToFolder", fields: [folderId], references: [id], onDelete: SetNull)
  creator     User             @relation("FileCreatedBy", fields: [createdBy], references: [id])
  updater     User             @relation("FileUpdatedBy", fields: [updatedBy], references: [id])
  permissions FilePermission[] @relation("FilePermissions")
}

model Folder {
  id        String   @id @default(uuid())
  name      String
  parentId  String?
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String
  updatedBy String

  owner       User               @relation("FolderOwner", fields: [ownerId], references: [id])
  parent      Folder?            @relation("FolderParent", fields: [parentId], references: [id], onDelete: SetNull)
  children    Folder[]           @relation("FolderParent")
  files       File[]             @relation("FileToFolder")
  creator     User               @relation("FolderCreatedBy", fields: [createdBy], references: [id])
  updater     User               @relation("FolderUpdatedBy", fields: [updatedBy], references: [id])
  permissions FolderPermission[] @relation("FolderPermissions")
}

model FilePermission {
  id        String   @id @default(uuid())
  fileId    String
  userId    String
  canRead   Boolean  @default(true)
  canWrite  Boolean  @default(false)
  createdAt DateTime @default(now())

  file File @relation("FilePermissions", fields: [fileId], references: [id], onDelete: Cascade)
  user User @relation("FilePermissionUser", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([fileId, userId])
}

model FolderPermission {
  id        String   @id @default(uuid())
  folderId  String
  userId    String
  canRead   Boolean  @default(true)
  canWrite  Boolean  @default(false)
  createdAt DateTime @default(now())

  folder Folder @relation("FolderPermissions", fields: [folderId], references: [id], onDelete: Cascade)
  user   User   @relation("FolderPermissionUser", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([folderId, userId])
}
